<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:background="#FFFFFF"
        android:orientation="vertical" android:visibility="visible">
    <android.support.v7.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints">
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/camera" android:id="@+id/imageButton3"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/insta" android:id="@+id/imageView3"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/igtv" android:id="@+id/imageButton4"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp" app:srcCompat="@drawable/dm" android:id="@+id/imageButton5"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <View
            android:layout_width="411dp"
            android:layout_height="6dp"
            android:background="@drawable/drop_shadow" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="50dp" tools:layout_editor_absoluteX="0dp">

    </View>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="0dp">
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp" app:srcCompat="@drawable/mystory" android:id="@+id/imageButton2"
                android:layout_weight="0"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp" app:srcCompat="@drawable/hoony" android:id="@+id/imageButton8"
                android:layout_weight="0"
                android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="내 스토리"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                android:layout_marginStart="12dp" android:layout_marginBottom="2dp"/>
        <TextView
                android:text="hoony_hooni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginStart="12dp" android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@drawable/postprofile"
                        android:id="@+id/imageButton12" android:layout_weight="0" tools:layout_editor_absoluteY="29dp"
                        tools:layout_editor_absoluteX="10dp" tools:ignore="MissingConstraints"
                        android:layout_marginTop="10dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="0">
                    <TextView
                            android:text="sj.lunar__"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView3"
                            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="15sp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:text="서울시립대학교 - University of Seoul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView4"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>
                </LinearLayout>
                <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/menu"
                        android:id="@+id/imageButton10"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="18dp"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="385dp" app:srcCompat="@drawable/photo" android:id="@+id/imageView2"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                        <ImageButton
                                android:layout_width="38dp"
                                android:layout_height="38dp" app:srcCompat="@drawable/test"
                                android:id="@+id/imageView4"
                                android:layout_weight="0"
                                android:layout_marginTop="3dp"/>
                        <Button
                                android:background="@drawable/datgeul"
                                android:layout_marginTop="3dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp" app:srcCompat="@drawable/datgeul"
                                android:id="@+id/imageView5"
                                android:layout_weight="0"/>
                        <ImageButton
                                android:layout_width="38dp"
                                android:layout_height="38dp" app:srcCompat="@drawable/share"
                                android:id="@+id/imageView6"
                                android:layout_marginTop="5dp"
                                android:layout_weight="0"/>
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" app:srcCompat="@drawable/mark"
                                android:id="@+id/imageView7"
                                android:layout_weight="0"
                                android:layout_marginStart="250dp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView12"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                            android:text="좋아요 319개"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView8"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp" android:textStyle="bold"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="sj.lunar__"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView10"
                                android:layout_weight="1"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:layout_marginStart="10dp" android:textStyle="bold"/>
                        <TextView
                                android:text="멋쟁이 사자처럼 화이팅!!"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView11"
                                android:layout_weight="0"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:fontFamily="sans-serif-thin"
                                android:layout_marginStart="10dp"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                    </LinearLayout>
                    <TextView
                            android:text="댓글 26개 모두 보기"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>